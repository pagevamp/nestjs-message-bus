{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "removeComments": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es2020",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./src",
      "rootDir": "./",
      "incremental": true,
      "resolveJsonModule": true,
      "strictNullChecks": true,
      "esModuleInterop": true,
    },
    "exclude": ["node_modules", "dist"]
  }
  