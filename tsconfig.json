{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "removeComments": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es2020",
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "incremental": false,
      "resolveJsonModule": true,
      "strictNullChecks": true,
      "esModuleInterop": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "test"]
  }
